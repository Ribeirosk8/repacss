---
// Component for tutorial navigation cards
const tutorialSections = [
  {
    href: "/user-guide/basic-installation",
    title: "Basic Installation",
    description: "Step-by-step guide to install REPACSS"
  },
  {
    href: "/user-guide/environments",
    title: "Environments",
    description: "Working with different environments"
  },
  {
    href: "/user-guide/configuration",
    title: "Configuration",
    description: "Configure REPACSS for your project"
  },
  {
    href: "/user-guide/package-creation",
    title: "Package Creation",
    description: "Create and manage packages"
  }
];

const additionalResources = [
  {
    href: "/user-guide/advanced-topics",
    title: "Advanced Topics",
    description: "Deep dive into advanced REPACSS features"
  },
  {
    href: "/user-guide/build-systems",
    title: "Build Systems",
    description: "Integrating with various build systems"
  }
];
---

<div class="mb-8">
  <h3>Tutorial Sections</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-6">
    {tutorialSections.map(tutorial => (
      <a href={tutorial.href} class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-[#30d158] dark:hover:border-[#30d158] transition-colors">
        <h4 class="font-medium text-[#30d158]">{tutorial.title}</h4>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{tutorial.description}</p>
      </a>
    ))}
  </div>

  <h4 class="font-medium mb-3">Additional Resources</h4>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
    {additionalResources.map(resource => (
      <a href={resource.href} class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-[#30d158] dark:hover:border-[#30d158] transition-colors">
        <h4 class="font-medium text-[#30d158]">{resource.title}</h4>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{resource.description}</p>
      </a>
    ))}
  </div>
</div>